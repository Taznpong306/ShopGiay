@model List<Product>
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        @if (Model.Count > 0)
        {

            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var x in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <a href="../../Customer/Productdetail/Productdetail?id=@x.Id"><img class="card-img-top" src="/@x.ImageUrl" alt="..." /></a>
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@x.Name</h5>
                                    <!-- Product price-->
                                    @Html.FormatValue(x.Price, "${0:#,##0}")
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a class="addtocart btn btn-outline-dark mt-auto" data-productID="@x.Id" asp-action="AddToCart" asp-controller="Cart" asp-route-productId="@x.Id">
                                        Add To Cart
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        }
        else
        {
            <h5>Không tìm thấy thông tin</h5>
        }
    </div>
</section>